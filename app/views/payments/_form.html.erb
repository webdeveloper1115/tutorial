<%= form_for @payment, :html => { :class => "form-horizontal payment" } do |f| %>

  <% if @payment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label :responseCode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :responseCode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:responseCode) %>
  </div>
  <div class="form-group">
    <%= f.label :responseMessage, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :responseMessage, :class => 'form-control' %>
    </div>
    <%=f.error_span(:responseMessage) %>
  </div>
  <div class="form-group">
    <%= f.label :xref, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :xref, :class => 'form-control' %>
    </div>
    <%=f.error_span(:xref) %>
  </div>
  <div class="form-group">
    <%= f.label :amountReceived, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amountReceived, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amountReceived) %>
  </div>
  <div class="form-group">
    <%= f.label :transactionID, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :transactionID, :class => 'form-control' %>
    </div>
    <%=f.error_span(:transactionID) %>
  </div>
  <div class="form-group">
    <%= f.label :cardNumberMask, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cardNumberMask, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cardNumberMask) %>
  </div>
  <div class="form-group">
    <%= f.label :cardTypeCode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cardTypeCode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cardTypeCode) %>
  </div>
  <div class="form-group">
    <%= f.label :cardType, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cardType, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cardType) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
